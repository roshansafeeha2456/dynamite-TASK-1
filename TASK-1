    /* Preloader styling */
    #preloader {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100vh;
      background: #ffffff;
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 9999;
    }

    /* Hide content initially */
    .content {
      display: none;
      text-align: center;
      padding: 50px;
    }

    /* Fade-out effect for preloader */
    .fade-out {
      opacity: 0;
      transition: opacity 0.8s ease;
    }
